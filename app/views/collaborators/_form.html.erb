<div class="row">
  <% if current_user.admin? || @wiki.user_id == current_user.id %>
    <div class="form-group">
      <h3>Users available to add as collaborators:</h3>
        <% @users.each do |user| %>
          <h4><%= user.email %></h4>
            <% if @wiki.users.include? user %>
              <%= link_to "Delete Collaborator", wiki_collaborator_path(@wiki, @wiki.collaborators.find_by_user_id(user.id).id), method: :delete, class: 'btn btn-danger' %>
            <% else %>
              <%= link_to "Add Collaborator", wiki_collaborators_path(@wiki, user_id: user.id), method: :post, class: 'btn btn-success' %>
            <% end %>
          <% end %>
        </div>
      <% end %>
</div>
